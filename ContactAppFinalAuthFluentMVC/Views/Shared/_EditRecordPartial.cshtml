@model ContactAppFinalAuthFluentMVC.Models.Contact

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Contact</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id, new {id = "contactId" })

        <div class="form-group">
            @Html.LabelFor(model => model.FName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FName, new { htmlAttributes = new { @class = "form-control" , id = "ContactFName" } })
                @Html.ValidationMessageFor(model => model.FName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LName, new { htmlAttributes = new { @class = "form-control" , id="ContactLName" } })
                @Html.ValidationMessageFor(model => model.LName, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    $("#editRecord").on('submit', function (e) {
        e.preventDefault()
        var myData = {
                Id: $("#contactId").val(),
                FName: $("#ContactFName").val(),
                LName: $("#ContactLName").val()
        }
        console.log(myData)
        $.ajax({
            url: '/Contact/Edit',
            type: "POST",
            data: myData,
            success: function (response) {
                alert("Successfull Updation Of Contact")
                //loadItems()
                $("#editRecord").hide()
                $(".listItems").show()
                loadItems()
            },
            error: function (error) {
                alert("Error Occurs")
            }
        })
        
    })
</script>
