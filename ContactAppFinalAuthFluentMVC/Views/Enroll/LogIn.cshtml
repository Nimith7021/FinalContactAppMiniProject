@model ContactAppFinalAuthFluentMVC.ViewModels.LoginVM

@{
    ViewBag.Title = "LogIn";
}

<h2 class="display-3 text-center">LogIn User Credentials</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal container border  w-50 shadow" >
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group d-flex m-4 ms-5 ">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 mt-1 ms-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control ms-4" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group container d-flex ms-5">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control ms-2" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                <br />
            </div>
        </div>

        <div class="form-group container text-center  m-lg-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit"  value="Login" class="btn btn-outline-info " />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Register", "Register")
</div>
